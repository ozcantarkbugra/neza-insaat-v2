# Ortam: development | production
APP_ENV=development

# Veritabanı
# Local (Docker dev): port 5472 - docker compose -f docker-compose.dev.yml up -d
# Production: port 5432 - docker-compose.prod.yml içinde postgres:5432 kullanılır
DATABASE_URL="postgresql://postgres:postgres@localhost:5472/construction_db?schema=public"

# JWT (min 32 karakter - production'da mutlaka değiştirin!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Sunucu
NODE_ENV=development
PORT=5002
FRONTEND_URL=http://localhost:3000
# Görsel URL'leri (seed, upload)
# Local: http://localhost:5002 | Production: https://nezainsaat.com
BASE_URL=http://localhost:5002

# Opsiyonel: Google Maps
# GOOGLE_MAPS_API_KEY=

